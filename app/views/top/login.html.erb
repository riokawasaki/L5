<h2>ログイン</h2>
<%= form_with url: top_login_path, method: :post, local: true do |f| %>
    <%= f.label :uid, 'ユーザーID' %>
    <%= f.text_field :uid %>
    <%= f.label :pass, 'パスワード' %>
    <%= f.password_field :pass %>
    <%= f.submit '登録' %>
<% end %>

<%= link_to '新規登録', '/users/new' %>
<%= link_to '登録一覧', '/users/index' %>